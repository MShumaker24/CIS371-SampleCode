<html>

<style>
    td {
        width: 25px;
        text-align: right;
    }
    
    th {
        text-align: right;
        border-bottom: 1px solid black;
    }
    
    tr td:first-child,
    tr th:first-child {
        border-right: 1px solid black;
    }
</style>


<body>
    <h1>Multiplication Table</h1>

    <table>

        <tr>
            <th>x</th>
            <% for (let c = 0; c < columns; ++c) { %>
                <th>
                    <%= c %>
                </th>
                <% } %>
        </tr>

        <% for (let r = 0; r < rows; ++r) { %>
            <tr>
                <td>
                    <%= r %>
                </td>
                <% for (let c = 0; c < columns; ++c) { %>
                    <td>
                        <%= r*c %>
                    </td>
                    <% } %>
            </tr>
            <% } %>
    </table>


</body>

</html>